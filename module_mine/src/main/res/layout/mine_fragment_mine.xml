<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/public_rippleStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/mine_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mine" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_icon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/public_ic_launcher" />

            <ImageView
                android:id="@+id/img_icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/public_ic_launcher" />

            <ImageView
                android:id="@+id/img_icon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/public_ic_launcher" />

            <ImageView
                android:id="@+id/img_icon4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/public_ic_launcher" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/img_icon_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/img_icon_lay1"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_icon_lay2"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_icon_lay3"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/public_redText"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_icon_lay_folt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/img_icon_lay_folt1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/img_icon_lay_folt2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/img_icon_lay_folt3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/img_icon_lay_folt4"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_icon_c1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/public_ic_launcher" />

                <TextView
                    android:id="@+id/img_icon_cont1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/black" />

                <ImageView
                    android:id="@+id/img_icon_c4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/public_ic_launcher" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/img_icon_lay4"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/public_redText"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/img_icon_lay5"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/bar_grey"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_icon_lay6"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/public_unEnableButton"
                android:orientation="horizontal" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
